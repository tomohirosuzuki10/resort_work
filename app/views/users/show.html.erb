<div class="contener user-show-image">
  <div class="row justify-content-center">
   <div class="col-4 mt-5 ">
    <% if @user.image.attached? %>
      <%= image_tag @user.image.variant( resize: "300x250", gravity: "center") %>
    <% end %>
   </div>
   
   <div class="col-4 mt-2">
    <h2><%= @user.name %></h2><br>
     <div class="mt-3">
      <%= @user.prefecture.name%>
     </div><br>
     <P class="mt-2"><%= @user.introduction %></P>
   </div>
   <div class="col-2">
    <% if current_user.id == @user.id %>
     <%= link_to "プロフィール編集", "#{@user.id}/edit" %>
    <% end %>
   </div>
  </div>
</div>

<div class="contener m-0">
 
 <div class="show-post-index">
   <% @posts.each do |post| %>
    <div class="border border-3 m-3"> 
     <div>
      <i class="fa-solid fa-location-pin">沖縄</i>
     </div>
     <% if post.post_images.attached? %>
      <% post.post_images.each do |image| %>
       <%= image_tag image, size: '400x300' %>
      <% end %>
     <% end %><br>
     <span>タイトル：<%= post.title %><span>
     <br>
     <div class="mb-2">
      <%= link_to post.post_content, post_path(post) %>
     </div>
    </div>
   <% end %>
 </div>
</div>
 <div class="d-flex justify-content-end">
 <%= paginate @posts%>
 </div>