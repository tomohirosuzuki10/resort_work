<div class="akounto">
  <div class="contener">
    <div class="row justify-content-center">
      <h2>新規作成</h2>
    </div>
    <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { enctype: "multipart/form-data" }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group akount-form">
        <%=f.label :name, "氏名"  %><br>
        <%=f.text_field :name, autofocus: "true", required:"", autocomplete: "name", placeholder: "鈴木 太郎" %>
      </div>

        <div class="form-group akount-form">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
        </div>
        
        

        <div class="form-group akount-form">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "パスワード" %>
        </div>

        <div class="form-group akount-form">
            <%= f.label :password_confirmation, "パスワード" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "パスワード" %>
        </div>
        
        <div class="form-group akount-form">
          <%= f.label :prefecture_id, "働いてる地域" %><br />
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name ) %>
        </div>
        <div class="form-group akount-form">
          <%=f.label :introduction, "自己紹介"  %><br />
          <%=f.text_area :introduction, autofocus: "true" %> 
        </div>


        <div class="akount-action">
          <%= f.submit "アカウント作成" %>
        </div>
      <% end %>
    </div>
  </div>
</div>