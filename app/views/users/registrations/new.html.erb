<h2>新規作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
　
　<div class="field">
　  <%=f.label :name, "氏名"  %><br />
　  <%=f.text_field :name,　autofocus: "true",　required: "",　autocomplete: "name",　placeholder: "鈴木 太郎" %>
　</div>
　
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード" %>
  </div>
  <div class="mb-3">
     <%= f.label :sex, "性別" %><br />
     <%= f.select :sex, @sex_options, { include_blank: '性別を選択してください' } %>
  </div>
  <div class="field">
  <%= f.label :prefecture_id, "働いてる地域" %><br />
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name ) %>
 </div>
  <div class="field">
　   <%=f.label :introduction, "自己紹介"  %><br />
　  <%=f.text_area :introduction, autofocus: "true" %>
　</div>

  <div class="actions">
    <%= f.submit "アカウント作成" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
