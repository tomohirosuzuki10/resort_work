
 <div class="container">
 
 <div class="post-index">
   <% @posts.each do |post| %>
    <div class=" border border-3 m-1"> 
     <div class ="text-right">
      <i class="fa-solid fa-location-pin"></i><%= post.post_place %>
       @<%= link_to post.user.name, "users/#{post.user.id}" %>
     </div>
     <% if post.post_images.attached? %>
      <% post.post_images.each do |image| %>
      <%= image_tag image, size: '300x200' %>
     <% end %>
    <% end %><br>
    <span>タイトル：<%= link_to post.title, "posts/#{post.id}" %></span>
    <br>
    <%= post.post_content %>
    </div>
   <% end %>
 </div>
</div>